@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]  CoreLabTest</title>

    <link href="~/css/dashboardcss/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/dashboardcss/metisMenu.min.css" rel="stylesheet" />
    <link href="~/css/dashboardcss/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/css/dashboardcss/dataTables/dataTables.responsive.css" rel="stylesheet" />
    <link href="~/css/dashboardcss/timeline.css" rel="stylesheet" />
    <link href="~/css/dashboardcss/startmin.css" rel="stylesheet" />
    <link href="~/css/dashboardcss/morris.css" rel="stylesheet" />
    <link href="~/css/dashboardcss/font-awesome.min.css" rel="stylesheet" />


</head>
<body>
    <div id="page-wrapper">

        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="navbar-header">
                <a class="navbar-brand" asp-action="IndexDashboard" asp-controller="Home">Foodies</a>
            </div>

            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            <ul class="nav navbar-nav navbar-left navbar-top-links">
                <li><a href="#"><i class="fa fa-home fa-fw"></i> Website</a></li>
            </ul>

            <ul class="nav navbar-right navbar-top-links">
                <li class="dropdown navbar-inverse">

                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i>Welcome- @HttpContextAccessor.HttpContext.Session.GetString("Name") <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu dropdown-user">

                        <li>
                            <a asp-action="Logout" asp-controller="Home"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                        </li>
                    </ul>
                </li>
            </ul>
            <!-- /.navbar-top-links -->

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li class="sidebar-search">
                            <div class="input-group custom-search-form">
                                <input type="text" class="form-control" placeholder="Search...">
                                <span class="input-group-btn">
                                    <button class="btn btn-primary" type="button">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                            <!-- /input-group -->
                        </li>
                        <li>
                            <a href="@Url.Action("IndexDashBoard","Home")" class="active"><i class="fa fa-dashboard fa-fw"></i> Dashboard</a>
                        </li>
                        <li>
                            <a asp-action="Show" asp-controller="Worker"><i class="fa fa-table fa-fw"></i> Workers-Datils</a>
                        </li>
                        <li>
                            <a asp-action="Add" asp-controller="Worker"><i class="fa fa-edit fa-fw"></i> Add-Workers</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>


        @RenderBody()

    </div>

    <script src="~/js/dashboardjs/jquery.min.js"></script>
    <script src="~/js/dashboardjs/bootstrap.min.js"></script>
    <script src="~/js/dashboardjs/metisMenu.min.js"></script>
    <script src="~/js/dashboardjs/raphael.min.js"></script>
    <script src="~/js/dashboardjs/dataTables/jquery.dataTables.min.js"></script>
    <script src="~/js/dashboardjs/dataTables/dataTables.bootstrap.min.js"></script>
    <script src="~/js/dashboardjs/startmin.js"></script>






    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)*@
</body>
</html>
