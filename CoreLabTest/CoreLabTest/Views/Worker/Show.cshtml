@model List<CoreLabTest.Models.WorkerModel>


@{
    ViewBag.Title = "EmpTable";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Tables</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    DataTables Advanced Tables
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Sr No.</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Salary</th>
                                    <th>Age</th>
                                    <th>Address</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>

                                @{
                                    var sn = 1;
                                }

                                @foreach (var item in Model)
                                {
                                    <tr class="odd gradeX">

                                        <td>@sn</td>
                                        <td>@item.Name</td>
                                        <td>@item.Email</td>
                                        <td>@item.Salary</td>
                                        <td>@item.Age</td>
                                        <td>@item.Address</td>
                                        <td><a asp-action="Edit" asp-controller="Worker" asp-route-id="@item.Id" ><i class="fa fa-edit fa-fw"></i></a></td>
                                        <td><a asp-action="Delete" asp-controller="Worker" asp-route-id="@item.Id" ><i class="fa fa-trash fa-fw"></i></a></td>
                                    </tr>
                                    sn = sn + 1;
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>

</div>
<!-- /.container-fluid -->

<script src="~/js/dashboardjs/jquery.min.js"></script>


<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });</script>

